<h1>Ola sequelize</h1>

<div class="container">
    {{#each users}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}">Ver detalhes</a>
                <a href="/users/edit/{{this.id}}">Editar</a>

                <form action="/users/delete/{{this.id}}" class="details-btn" method="POST">
                    <input type="submit" value="Excluir" class="delete-btn">
                </form>
            </div>
        </div>
    {{/each}}
</div>